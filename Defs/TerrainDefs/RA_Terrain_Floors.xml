<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TerrainDef Name="Floor" Abstract="True">
		<layerable>true</layerable>
		<affordances>
			<li>Light</li>
			<li>Heavy</li>
			<li>SmoothHard</li>
		</affordances>
		<statBases>
			<WorkToMake>135</WorkToMake>
		</statBases>
		<Fertility>0</Fertility>
		<constructEffect>ConstructDirt</constructEffect>
		<AcceptTerrainSourceFilth>True</AcceptTerrainSourceFilth>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Floors</designationCategory>
	</TerrainDef>
	

	<TerrainDef ParentName="Floor">
		<DefName>HayFloor</DefName>
		<label>hay floor</label>
		<RenderPrecedence>260</RenderPrecedence>
		<Description>Cheepest flooring possible.</Description>
		<texturePath>Things/Buildings/Structure/Floors/HayFloor</texturePath>
		<statBases>
			<Flammability>3</Flammability>
			<WorkToMake>20</WorkToMake>
		</statBases>
		<costList>
			<Hay>3</Hay>
		</costList>
		<researchPrerequisites>
			<li>StartPack</li>
		</researchPrerequisites>
	</TerrainDef>
	

	<!-- ==================== Stone Floors =====================-->


	<TerrainDef Name="FloorBlock" ParentName="Floor" Abstract="True">
		<RenderPrecedence>220</RenderPrecedence>
		<Description>Solid stone tiles for a castle feeling. Pretty to look at, but they take a long time to lay.</Description>
		<texturePath>Terrain/Surfaces/TileStone</texturePath>
		<statBases>
			<WorkToMake>700</WorkToMake>
			<Beauty>2</Beauty>
		</statBases>
		<researchPrerequisites>
			<li>Masonry</li>
		</researchPrerequisites>
	</TerrainDef>


