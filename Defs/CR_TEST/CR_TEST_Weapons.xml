<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="CR_TEST_BaseWeaponNeolithic" Abstract="True">
		<category>Item</category>
		<thingClass>ThingWithComps</thingClass>
		<equipmentType>Primary</equipmentType>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<selectable>True</selectable>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<SellPriceFactor>0.5</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<techLevel>Neolithic</techLevel>
		<weaponTags>
			<li>Neolithic</li>
		</weaponTags>
		<thingCategories>
			<li>WeaponsRanged</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Forbiddable" />
			<li>
				<compClass>CompEquippable</compClass>
			</li>
		</comps>
		<recipeMaker>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<effectWorking>Smelt</effectWorking>
		</recipeMaker>
	</ThingDef>

	<ThingDef Name="CR_TEST_BaseWeaponBow" ParentName="CR_TEST_BaseWeaponNeolithic" Abstract="True">
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="CR_TEST_BaseWeaponBow">
		<defName>CR_TEST_Bow_Short</defName>
		<label>CR_TEST short bow</label>
		<description>A simple short bow, made with skill, but using only the most primitive technologies.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/BowShort</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>BowSmall</soundInteract>
		<costList>
			<WoodLog>40</WoodLog>
		</costList>
		<statBases>
			<WorkToMake>1200</WorkToMake>
			<MarketValue>60</MarketValue>
			<CR_TEST_AimEfficiency>0.35</CR_TEST_AimEfficiency>
			<CR_TEST_ShotSpread>1</CR_TEST_ShotSpread>
			<CR_TEST_SwayFactor>2</CR_TEST_SwayFactor>
			<Bulk>3.00</Bulk>
			<Weight>2.00</Weight>
			<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>NeolithicRanged</li>
			<li>CR_Bow</li>
		</weaponTags>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<verbs>
			<li Class="RA.CR.VerbPropertiesCR">
				<verbClass>RA.CR.Verb_ShootCR</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<projectileDef>CR_TEST_Projectile_Arrow_Stone</projectileDef>
				<warmupTicks>60</warmupTicks>
				<range>23</range>
				<soundCast>BowSmall</soundCast>
			</li>
		</verbs>
		<comps>
			<li Class="RA.CR.CompProperties_AmmoUser">
				<ammoSet>CR_TEST_AmmoSet_Arrow</ammoSet>
			</li>
			<li Class="RA.CR.CompProperties_FireModes">
				<aiUseBurstMode>false</aiUseBurstMode>
				<aiUseAimMode>false</aiUseAimMode>
			</li>
		</comps>
	</ThingDef>
	
</ThingDefs>