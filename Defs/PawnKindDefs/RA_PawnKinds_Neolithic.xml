	<PawnKindDef Name="PawnNeolithic" Abstract="True">
		<race>Human</race>
		<combatPower>30</combatPower>
		<baseRecruitDifficulty>0.70</baseRecruitDifficulty>
		<backstoryCategory>Tribal</backstoryCategory>
		<invNutrition>2.55</invNutrition>
		<invFoodDef>Pemmican</invFoodDef>
		<backstoryCryptosleepCommonality>0.01</backstoryCryptosleepCommonality>
		<maxGenerationAge>40</maxGenerationAge>
		<gearHealthRange>
			<min>0.5</min>
			<max>1.8</max>
		</gearHealthRange>
		<apparelMoney>
			<min>180</min>
			<max>350</max>
		</apparelMoney>
		<apparelTags>
			<li>Spacer</li>
		</apparelTags>
		<weaponMoney>
			<min>60</min>
			<max>400</max>
		</weaponMoney>
		<weaponTags>
			<li>MeleeNeolithic</li>
		</weaponTags>
	</PawnKindDef>

