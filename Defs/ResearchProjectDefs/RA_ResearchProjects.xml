<ResearchProjectDefs>


	<!--used to hide buldings-->
	<ResearchProjectDef>
		<defName>Blocked</defName>
		<prerequisites>
			<li>Blocked</li>
		</prerequisites>		
	</ResearchProjectDef>


	<ResearchProjectDef>
		<defName>SurvivalGuideI</defName>
		<label>basic survival guide instructions</label>
		<description>You've learned something useful.</description>
		<prerequisites>
			<li>SurvivalGuideI</li>
		</prerequisites>		
	</ResearchProjectDef>


	<!-- ========================= Neolithic Tech Level ==========================-->


	<ResearchProjectDef>
		<defName>ExamineFlora</defName>
		<label>examine local flora</label>
		<description>Study local flora samples to see what you can do with them.</description>
		<totalCost>100</totalCost>
	</ResearchProjectDef>
	
	
			<ResearchProjectDef>
				<defName>BasicFarming</defName>
				<label>basic farming</label>
				<description>Learn how to grow simple omestic plants.</description>
				<totalCost>200</totalCost>
				<prerequisites>
					<li>ExamineFlora</li>
				</prerequisites>
				<researchMods>
					<li>
						<specialAction>RA.ResearchMods.BasicFarming</specialAction>
					</li>
				</researchMods>
			</ResearchProjectDef>
			
			<ResearchProjectDef>
				<defName>WoodWorking</defName>
				<label>wood working</label>
				<description>Allows you perform elaborate wooden carving to make wooden trade crafts and base for tools and weapons.</description>
				<totalCost>200</totalCost>
				<prerequisites>
					<li>ExamineFlora</li>
				</prerequisites>
				<researchMods>
					<li>
						<specialAction>RA.ResearchMods.WoodWorking</specialAction>
					</li>
				</researchMods>
			</ResearchProjectDef>

			
	<ResearchProjectDef>
		<defName>ExamineFauna</defName>
		<label>examine local fauna</label>
		<description>Study local fauna species to see what you can do with them.</description>
		<totalCost>100</totalCost>
	</ResearchProjectDef>

			
			<ResearchProjectDef>
				<defName>BoneWorking</defName>
				<label>bone working</label>
				<description>Allows you perform elaborate bone carving to make bone trade crafts and sharp blades.</description>
				<totalCost>200</totalCost>
				<prerequisites>
					<li>ExamineFauna</li>
				</prerequisites>
				<researchMods>
					<li>
						<specialAction>RA.ResearchMods.BoneWorking</specialAction>
					</li>
				</researchMods>
			</ResearchProjectDef>
			
			<ResearchProjectDef>
				<defName>LeatherWorking</defName>
				<label>leather working</label>
				<description>Allows you to craft apparel from animals' hides.</description>
				<totalCost>200</totalCost>
				<prerequisites>
					<li>ExamineFauna</li>
				</prerequisites>
				<researchMods>
					<li>
						<specialAction>RA.ResearchMods.LeatherWorking</specialAction>
					</li>
				</researchMods>
			</ResearchProjectDef>
			
			<ResearchProjectDef>
				<defName>AnimalHusbandry</defName>
				<label>animal husbandry</label>
				<description>Learn how to tame and control wild animals.</description>
				<totalCost>200</totalCost>
				<prerequisites>
					<li>ExamineFauna</li>
				</prerequisites>
			</ResearchProjectDef>

			
	<ResearchProjectDef>
		<defName>StoneWorking</defName>
		<label>stone working</label>
		<description>Allows you to cut stone chunks into blocks and allows you perform elaborate stone carving to make stone trade crafts and sharp blades.</description>
		<totalCost>200</totalCost>
		<researchMods>
			<li>
				<specialAction>RA.ResearchMods.StoneWorking</specialAction>
			</li>
		</researchMods>
	</ResearchProjectDef>
	

