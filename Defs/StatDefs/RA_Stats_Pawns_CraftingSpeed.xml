	<StatDef Name="CraftingDumb" ParentName="Crafting" Abstract="True">
		<capacityFactors>
			<li>
				<capacity>Consciousness</capacity>
				<weight>0.5</weight>
			</li>
		</capacityFactors>
	</StatDef>


