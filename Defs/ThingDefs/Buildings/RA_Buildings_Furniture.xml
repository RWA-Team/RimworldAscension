<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

	<!-- 
	- fillPercent - determne cover multiplier vs projectiles
	- castEdgeShadows - shadow aura around building
	- staticSunShadowHeight - solid square shadow with set length
	- drawerType:
		- MapMeshOnly - doesn't draw from comps
		- MapMeshAndRealTime - doesn't draw from comps
		- RealtimeOnly - used for objects that change their texture
	- surfaceType:
		- Item - allows place items
		- Eat - allows place food to eat
	- resourceReadoutPriority - determines the resource check order build designators and bills. They don't work without that parameter defined
	 -->

	<ThingDef Name="Furniture" ParentName="Building" Abstract="True">
		<altitudeLayer>Waist</altitudeLayer>
		<designationCategory>Furniture</designationCategory>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Name="Container" ParentName="Furniture" Abstract="True">
		<thingClass>RA.Container</thingClass>
		<drawerType>RealtimeOnly</drawerType>
		<Size>(1,1)</Size>
		<building>
			<preventDeterioration>true</preventDeterioration>
			<deconstructible>false</deconstructible>
		</building>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<rotatable>false</rotatable>
		<AltitudeLayer>ItemImportant</AltitudeLayer>
		<surfaceType>Item</surfaceType>
		<hasTooltip>true</hasTooltip>
		<inspectorTabs>
			<li>ITab_Storage</li>
			<li>RA.ITab_Container</li>
		</inspectorTabs>
	</ThingDef>


	<ThingDef Name="MinifiedFurniture" ParentName="Minified" Abstract="True">
		<thingCategories>
			<li>MinifiedFurniture</li>
		</thingCategories>
	</ThingDef>	

	<!--========================= Containers =========================-->

	<ThingDef ParentName="Container">
		<defName>Basket</defName>
		<label>basket</label>
		<Description>A bark fiber based basket. Used to store various things inside.</Description>
		<graphicData>
			<texPath>Things/Buildings/Furniture/Containers/Basket/Basket</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.9,0.9)</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>100</MarketValue>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
		</statBases>
		<costList>
			<Basket>1</Basket>
		</costList>
		<building>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Root</li>
					</categories>
					<exceptedCategories>
						<li>Refuse</li>
					</exceptedCategories>
				</filter>
			</fixedStorageSettings>
		</building>
		<comps>
			<li Class="RA.CompContainer_Properties">
				<itemsCap>3</itemsCap>
			</li>
		</comps>
		<minifiedDef>BasketMinified</minifiedDef>
		<researchPrerequisites>
			<li>StartPack</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="MinifiedFurniture">
		<defName>BasketMinified</defName>
		<label>basket</label>
	</ThingDef>


	<ThingDef ParentName="Container">
		<defName>Pot</defName>
		<label>pot</label>
		<Description>A big clay pot used to preserve food. Slightly decrease rotting process.</Description>
		<graphicData>
			<texPath>Things/Buildings/Furniture/Containers/Pot/Pot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(141,86,65)</color>
		</graphicData>
		<statBases>
			<MaxHitPoints>20</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
		</statBases>
		<costList>
			<Pot>1</Pot>
		</costList>
		<building>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Food</li>
					</categories>
				</filter>
			</fixedStorageSettings>
		</building>
		<comps>
			<li Class="RA.CompContainer_Properties">
				<itemsCap>3</itemsCap>
				<rotModifier>0.75</rotModifier>
			</li>
		</comps>
		<minifiedDef>PotMinified</minifiedDef>
		<researchPrerequisites>
			<li>Pottery</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="MinifiedFurniture">
		<defName>PotMinified</defName>
		<label>pot</label>
	</ThingDef>

	<!--========================= Beds =========================-->

	<ThingDef Name="Bed" ParentName="Furniture" Abstract="True">
		<ThingClass>Building_Bed</ThingClass>
		<Size>(1,2)</Size>
		<building>
			<Bed_ShowSleeperBody>True</Bed_ShowSleeperBody>
			<Bed_HealTickInterval>2100</Bed_HealTickInterval>
		</building>
		<statBases>
			<BedRestEffectiveness>1</BedRestEffectiveness>
			<ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
		</statBases>
		<passability>Standable</passability>
		<PathCost>40</PathCost>
		<fillPercent>0.25</fillPercent>
		<DrawGUIOverlay>True</DrawGUIOverlay>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>VitalsMonitor</li>
				</linkableFacilities>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
	</ThingDef>

