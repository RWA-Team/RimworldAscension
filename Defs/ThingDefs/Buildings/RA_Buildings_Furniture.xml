<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

	<!-- 
	- fillPercent - determne cover multiplier vs projectiles
	- castEdgeShadows - shadow aura around building
	- staticSunShadowHeight - solid square shadow with set length
	- resourceReadoutPriority - determines the resource check order build designators and bills. They don't work without that parameter defined
	 -->

	<ThingDef Name="Furniture" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<altitudeLayer>Waist</altitudeLayer>
		<selectable>true</selectable>
		<passability>PassThroughOnly</passability>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
		<statBases>
			<Flammability>1.0</Flammability>
		</statBases>
		<designationCategory>Furniture</designationCategory>
		<researchPrerequisite>Blocked</researchPrerequisite>
	</ThingDef>


	<ThingDef Name="LuxuryFurniture" ParentName="Furniture" Abstract="True">
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li>
				<compClass>CompArt</compClass>
				<nameMaker>NamerFurniture</nameMaker>
				<descriptionMaker>ArtFurniture</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
	</ThingDef>
	
	
	<ThingDef Name="Minified" Abstract="True">
		<thingClass>MinifiedThing</thingClass>
		<category>Item</category>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<drawerType>RealtimeOnly</drawerType>
		<thingCategories>
			<li>Furniture</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
	</ThingDef>


	<!--========================= Beds =========================-->


	<ThingDef Name="Bed" ParentName="Furniture" Abstract="True">
		<ThingClass>Building_Bed</ThingClass>
		<Size>(1,2)</Size>
		<building>
			<Bed_ShowSleeperBody>True</Bed_ShowSleeperBody>
		</building>
		<passability>Standable</passability>
		<PathCost>40</PathCost>
		<fillPercent>0.25</fillPercent>
		<DrawGUIOverlay>True</DrawGUIOverlay>
		<comps>
			<li>
				<compClass>CompAffectedByFacilities</compClass>
				<linkableFacilities>
					<li>VitalsMonitor</li>
				</linkableFacilities>
			</li>
		</comps>
	</ThingDef>


	<ThingDef ParentName="Bed">
		<defName>BedHay</defName>
		<label>hay bed</label>
		<Description>A makeshift bed, made of hay and small branches.</Description>
		<graphicData>
			<texPath>Missing</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>Cutout</shaderType>
		</graphicData>
		<PathCost>20</PathCost>
		<fillPercent>0</fillPercent>
		<altitudeLayer>LowPlant</altitudeLayer>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>-1</Beauty>
			<WorkToMake>100</WorkToMake>
			<BedRestEffectiveness>0.9</BedRestEffectiveness>
			<Comfort>0.5</Comfort>
			<ImmunityGainSpeedFactor>1.01</ImmunityGainSpeedFactor>
		</statBases>
		<costList>
			<WoodLog>10</WoodLog>
			<Hay>20</Hay>
		</costList>
		<building>
			<Bed_HealTickInterval>2300</Bed_HealTickInterval>
		</building>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisite>StartPack</researchPrerequisite>
	</ThingDef>	


	<ThingDef ParentName="Bed">
		<defName>BedHide</defName>
		<label>hide bed</label>
