		</building>
	</ThingDef>
	
	
	<!--======================= Basic domestic furniture ==============================-->


	<ThingDef ParentName="FurnitureBase">
		<defName>Stool</defName>
		<label>stool</label>
		<description>A simple platform on which to sit.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/Stool</texPath>
