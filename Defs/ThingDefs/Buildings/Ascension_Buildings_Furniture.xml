<?xml version="1.0" encoding="utf-8" ?>
<Buildings>


	<ThingDef Name="BuildingBase" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
	</ThingDef>
	

	<ThingDef Name="FurnitureBase" ParentName="BuildingBase" Abstract="True">
		<stuffCategories>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<DesignationCategory>Furniture</DesignationCategory>
		<minifiedDef>MinifiedFurniture</minifiedDef>
	</ThingDef>
	

	<ThingDef Name="HighQualityFurnitureBase" ParentName="FurnitureBase" Abstract="True">
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li>
				<compClass>CompArt</compClass>
				<nameMaker>NamerFurniture</nameMaker>
				<descriptionMaker>ArtFurniture</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
	</ThingDef>


	<!--============================== Beds ==============================-->


	<ThingDef ParentName="BuildingBase">
		<defName>SleepingSpot</defName>
		<ThingClass>Building_Bed</ThingClass>
		<label>sleeping spot</label>
		<description>Designates a spot on the ground where people should sleep. Not comfortable.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/Bed/SleepSpot</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,4)</drawSize>
		</graphicData>
		<AltitudeLayer>FloorEmplacement</AltitudeLayer>
		<statBases>
			<BedRestEffectiveness>0.8</BedRestEffectiveness>
			<WorkToMake>0</WorkToMake>
			<Beauty>-2</Beauty>
			<Comfort>0.4</Comfort>
		</statBases>
		<useHitPoints>False</useHitPoints>
		<Size>(1,2)</Size>
		<Passability>Standable</Passability>
		<DrawGUIOverlay>True</DrawGUIOverlay>
		<building>
			<Bed_ShowSleeperBody>True</Bed_ShowSleeperBody>
			<Bed_HealTickInterval>3000</Bed_HealTickInterval>
			<sowTag>SupportPlantsOnly</sowTag>
			<canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
		</building>
		<designationHotkey>C</designationHotkey>
	</ThingDef>
	
	
	<ThingDef ParentName="BuildingBase">
		<defName>LeafBed</defName>
		<label>leafy bed</label>
		<Description>A makeshift bed, made from logs and leaves.</Description>
		<ThingClass>Building_Bed</ThingClass>
		<graphicData>
			<texPath>Things/Furniture/Bed/LeafBed</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,4)</drawSize>
		</graphicData>
		<AltitudeLayer>Waist</AltitudeLayer>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>-1</Beauty>
			<WorkToMake>100</WorkToMake>
			<BedRestEffectiveness>0.9</BedRestEffectiveness>
			<Comfort>0.5</Comfort>
			<ImmunityGainSpeedFactor>1.05</ImmunityGainSpeedFactor>
		</statBases>
		<Size>(1,2)</Size>
		<costList>
			<WoodLog>10</WoodLog>
			<LeafBundle>5</LeafBundle>
		</costList>
		<building>
			<Bed_ShowSleeperBody>True</Bed_ShowSleeperBody>
			<Bed_HealTickInterval>2300</Bed_HealTickInterval>
		</building>
		<comps>
			<li>
				<compClass>CompAffectedByFacilities</compClass>
				<linkableFacilities>
					<li>VitalsMonitor</li>
				</linkableFacilities>
			</li>
		</comps>
		<PathCost>20</PathCost>
		<Passability>Standable</Passability>
		<DesignationCategory>Furniture</DesignationCategory>
		<DrawGUIOverlay>True</DrawGUIOverlay>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisite>ExamineFlora</researchPrerequisite>
	</ThingDef>	
	
	
	<ThingDef ParentName="FurnitureBase">
		<defName>Bed</defName>
		<label>bed</label>
		<Description>A cozy mattress and sheets on a frame for resting.</Description>
		<ThingClass>Building_Bed</ThingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/Bed/Bed</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,4)</drawSize>
		</graphicData>
		<AltitudeLayer>Waist</AltitudeLayer>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>8</Beauty>
			<WorkToMake>870</WorkToMake>
			<BedRestEffectiveness>1</BedRestEffectiveness>
			<Comfort>0.75</Comfort>
			<ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
		</statBases>
		<Size>(1,2)</Size>
		<stuffCategories>
		  <li>Fabric</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<costList>
			<WoodLog>35</WoodLog>
		</costList>
		<building>
			<Bed_ShowSleeperBody>False</Bed_ShowSleeperBody>
			<Bed_HealTickInterval>2100</Bed_HealTickInterval>
		</building>
		<comps>
			<li>
				<compClass>CompAffectedByFacilities</compClass>
				<linkableFacilities>
					<li>VitalsMonitor</li>
				</linkableFacilities>
			</li>
		</comps>
		<fillPercent>0.4</fillPercent>
		<PathCost>60</PathCost>
		<StaticSunShadowHeight>0.17</StaticSunShadowHeight>
		<CastEdgeShadows>True</CastEdgeShadows>
		<designationHotKey>B</designationHotKey>
		<Passability>PassThroughOnly</Passability>
		<DrawGUIOverlay>True</DrawGUIOverlay>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
	</ThingDef>
	
	
	<!--=========================== Animal beds ===============================-->
	

	<ThingDef ParentName="BuildingBase">
		<defName>AnimalSleepingSpot</defName>
		<ThingClass>Building_Bed</ThingClass>
		<label>animal sleeping spot</label>
		<description>Designates a spot on the ground where animals should sleep.</description>
		<size>(1,1)</size>
		<Passability>Standable</Passability>
		<designationCategory>Furniture</designationCategory>
		<useHitPoints>False</useHitPoints>
		<AltitudeLayer>FloorEmplacement</AltitudeLayer>
