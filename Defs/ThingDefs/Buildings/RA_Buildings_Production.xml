<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<!-- 
	fillPercent - determne cover multiplier vs projectiles
	castEdgeShadows - shadow aura around building
	staticSunShadowHeight - solid square shadow with set length
	 -->

	<ThingDef Name="Building" Abstract="True">
		<category>Building</category>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
		<DesignationCategory>Production</DesignationCategory>
		<researchPrerequisite>Blocked</researchPrerequisite>
	</ThingDef>


	<ThingDef Name="WorkTable" ParentName="Building" Abstract="True">
		<ThingClass>Building_WorkTable</ThingClass>
		<AltitudeLayer>Waist</AltitudeLayer>
		<surfaceType>Item</surfaceType>
		<Size>(3,1)</Size>
		<fillPercent>0.5</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li>
				<compClass>CompAffectedByFacilities</compClass>
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
	</ThingDef>


	<ThingDef Name="WorkTableFueled" ParentName="WorkTable" Abstract="True">
		<thingClass>RA.WorkTable_Fueled</thingClass>
		<passability>Impassable</passability>
		<tickerType>Normal</tickerType>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
			<graphicClass>Graphic_Single</graphicClass>
			<drawRotated>false</drawRotated>
		</graphicData>
		<placeWorkers>
			<li>PlaceWorker_Heater</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<inspectorTabs>
			<li>RA.ITab_Fuel</li>
		</inspectorTabs>
	</ThingDef>


	<!-- ==================== Neolithic Tables =====================-->


	<ThingDef Name="WorkTableNeolithic" ParentName="WorkTable" Abstract="True">
		<stuffCategories>
			<li>StoneChunk</li>
		</stuffCategories>
		<costStuffCount>3</costStuffCount>
	</ThingDef>


	<ThingDef ParentName="WorkTable">
		<defName>PrimitiveResearchTable</defName>
		<label>primitive research bench</label>
		<description>Study surround materials here to research new things.</description>
		<graphicData>
			<texPath>Things/Buildings/Production/ResearchBenches/Neolithic/ResearchBench_Neolithic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(5,2)</drawSize>
		</graphicData>
		<Size>(5,2)</Size>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToMake>2800</WorkToMake>
			<ResearchSpeedFactor>0.5</ResearchSpeedFactor>
		</statBases>
		<costStuffCount>10</costStuffCount>
		<!-- reseach recipes added via CompResearcher -->
		<comps>
			<li>
				<compClass>RA.CompResearcher</compClass>
			</li>
		</comps>
		<researchPrerequisite>StartPack</researchPrerequisite>
	</ThingDef>

	<!-- no build cost -->
	<ThingDef ParentName="WorkTableFueled">
		<defName>Campfire</defName>
		<label>campfire</label>
		<description>Cooks meals and produces heat. As with all heat sources, it must be placed indoors so it has a closed space to heat.</description>
		<graphicData>
			<texPath>Things/Buildings/Production/Campfire</texPath>
			<drawSize>(1.4,1.4)</drawSize>
		</graphicData>
		<altitudeLayer>LowPlant</altitudeLayer>
		<building>
			<isMealSource>true</isMealSource>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<deconstructible>true</deconstructible>
		</building>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToMake>200</WorkToMake>
		</statBases>
		<soundImpactDefault>BulletImpactGround</soundImpactDefault>
		<comps>
			<li>
				<compClass>CompGatherSpot</compClass>
			</li>
			<li>
				<compClass>CompGlower</compClass>
				<glowRadius>10</glowRadius>
				<glowColor>(252,187,113,0)</glowColor>
			</li>
			<li>
				<compClass>CompHeatPusher</compClass>
				<heatPerSecond>21</heatPerSecond>
				<heatPushMaxTemperature>28</heatPushMaxTemperature>
			</li>
			<li Class="RA.CompFueled_Properties">
				<operatingTemp>500</operatingTemp>
				<fireDrawOffset>(0,0,0.1)</fireDrawOffset>
				<smokeDrawOffset>(0,0,0.1)</smokeDrawOffset>
				<fuelDrawScale>0.8</fuelDrawScale>
			</li>
		</comps>
		<recipes>
			<li>CookMealSimple</li>
		</recipes>
		<researchPrerequisite>StartPack</researchPrerequisite>
	</ThingDef>

