<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<!-- 
	- fillPercent - determne cover multiplier vs projectiles
	- castEdgeShadows - shadow aura around building
	- staticSunShadowHeight - solid square shadow with set length
	- drawerType:
		- MapMeshOnly - doesn't draw from comps
		- MapMeshAndRealTime - doesn't draw from comps
		- RealtimeOnly - used for objects that change their texture (unsure)
	- surfaceType:
		- Item - allows place items
		- Eat - allows place food to eat
	- Building_Art class - adds beauty value stat to inpection string
	- Building_Art_Shadowed class - allows casting of fading shadows from stuffed things
	- terrainAffordanceNeeded - type of terrain required to be build upon (no difference in Light/Heavy in the game so far)
	 -->

	<!--==================== Base Abstracts ========================-->

	<ThingDef Name="Building" Abstract="True">
		<thingClass>Building</thingClass>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<category>Building</category>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
		<passability>PassThroughOnly</passability>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Flammability>1.0</Flammability>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>100</WorkToMake>
		</statBases>
	</ThingDef>
	

	<ThingDef Name="Minified" ParentName="Item" Abstract="True">
		<thingClass>MinifiedThing</thingClass>
	</ThingDef>	

	<!--==================== Decorations ========================-->

	<ThingDef Name="Decoration" ParentName="Building" Abstract="True">
		<thingClass>Building_Art</thingClass>
		<altitudeLayer>BuildingTall</altitudeLayer>
		<rotatable>false</rotatable>
		<fillPercent>1</fillPercent>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>ArtName_Sculpture</nameMaker>
				<descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
			</li> 
			<li>
				<compClass>RA.CompFadingShadowThrower</compClass>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<DesignationCategory>Decoration</DesignationCategory>
	</ThingDef>


	<ThingDef Name="MinifiedDecoration" ParentName="Minified" Abstract="True">
		<thingCategories>
			<li>MinifiedDecorations</li>
		</thingCategories>
	</ThingDef>


	<ThingDef ParentName="Decoration">
		<defName>Totem</defName>
		<label>totem</label>
		<size>(1,2)</size>
		<description>A person-sized piece of material sculpted into an artistic form.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<texPath>Things/Buildings/Decoration/Totem</texPath>
			<drawSize>(2.1,2.1)</drawSize>
			<shadowData>
				<volume>(0.45, 0.85, 0.45)</volume>
				<offset>(0,0,-0.60)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Beauty>40</Beauty>
			<WorkToMake>48000</WorkToMake>
		</statBases>
		<stuffCategories>
			<li>WoodLog</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<researchPrerequisites>
			<li>WoodCarving</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="Decoration">
		<defName>Cairn</defName>
		<label>cairn</label>
		<description>A cairn.</description>
		<graphicData>
			<texPath>Things/Buildings/Decoration/Cairn</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shaderType>Cutout</shaderType>
			<shadowData>
				<volume>(0.45, 0.85, 0.45)</volume>
				<offset>(0,0,-0.60)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Beauty>40</Beauty>
			<WorkToMake>48000</WorkToMake>
		</statBases>
		<stuffCategories>
			<li>StoneCobble</li>
		</stuffCategories>
		<researchPrerequisites>
			<li>StoneCutting</li>
		</researchPrerequisites>
	</ThingDef>
	
	<ThingDef ParentName="Furniture">
		<defName>PlantPot</defName>
		<label>plant pot</label>
		<thingClass>Building_PlantGrower</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/PlantPot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.3, 0.6, 0.3)</volume>
			</shadowData>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<rotatable>false</rotatable>
		<altitudeLayer>Waist</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.20</fillPercent>
		<statBases>
			<WorkToMake>495</WorkToMake>
		</statBases>
		<costList>
			<PlantPot>1</PlantPot>
		</costList>
		<inspectorTabs>
			<li>ITab_Growing</li>
		</inspectorTabs>
		<description>A pot to plant decorative flowers in to improve the beauty of the room it's in.</description>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<fertility>1.0</fertility>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<building>
			<defaultPlantToGrow>PlantDaylily</defaultPlantToGrow>
			<plantsDestroyWithMe>true</plantsDestroyWithMe>
			<sowTag>Decorative</sowTag>
		</building>
		<minifiedDef>PlantPotMinified</minifiedDef>
		<researchPrerequisites>
			<li>Firing</li>
		</researchPrerequisites>
	</ThingDef>	

	<ThingDef ParentName="MinifiedDecoration">
		<defName>PlantPotMinified</defName>
		<label>plant pot</label>
	</ThingDef>

	<!--======================= Light Sources =======================-->

	<ThingDef ParentName="Furniture">
		<defName>Torch</defName>
		<label>wood torch</label>
		<description>A temporary light source which burns for a few days.</description>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Buildings/Furniture/Lights/Torch</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<pathCost>50</pathCost>
		<constructEffect>ConstructDirt</constructEffect>
		<tickerType>Normal</tickerType>
		<drawerType>RealtimeOnly</drawerType>
		<statBases>
			<MaxHitPoints>20</MaxHitPoints>
			<WorkToMake>1</WorkToMake>
		</statBases>
		<selectable>true</selectable>
		<size>(1,1)</size>
		<costList>
			<WoodLog>1</WoodLog>
		</costList>
		<soundImpactDefault>BulletImpactGround</soundImpactDefault>
		<designationCategory>Furniture</designationCategory>
		<rotatable>false</rotatable>
		<researchPrerequisites>
			<li>AnimalDissection</li>
		</researchPrerequisites>
	</ThingDef>

</ThingDefs>