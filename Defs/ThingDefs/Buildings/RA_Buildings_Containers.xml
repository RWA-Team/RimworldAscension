<?xml version="1.0" encoding="utf-8" ?>
<Buildings>


	<ThingDef Name="StorageBase" Abstract="True">
		<category>Building</category>
		<thingClass>Building_Storage</thingClass>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<holdsRoof>false</holdsRoof>
		<filthLeaving>BuildingRubble</filthLeaving>
		<Passability>Impassable</Passability>	
		<castEdgeShadows>true</castEdgeShadows>
		<Size>(1,1)</Size>
		<building>
			<preventDeterioration>true</preventDeterioration>
		</building>
		<DesignationCategory>Furniture</DesignationCategory>
		<AltitudeLayer>ItemImportant</AltitudeLayer>
		<surfaceType>Item</surfaceType>
		<hasTooltip>true</hasTooltip>
		<tickerType>Normal</tickerType>
		<inspectorTabs>
			<li>ITab_Storage</li>
			<li>RA.ITab_Container_Gear</li>
		</inspectorTabs>
	</ThingDef>


	<!--============================== Neolithic Storage ==============================-->
	
	
	<ThingDef ParentName="StorageBase">
		<defName>Container_Amphora</defName>
		<label>Storage Box</label>
		<graphicData>
			<texPath>Things/Buildings/Furniture/Containers</texPath>
			<graphicClass>RA.Graphic_StuffBased</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Flammability>1.0</Flammability>
		</statBases>
		<Description>An amphora rack capable of storing up to four different types of consumables in their respective amphorae.</Description>
		<stuffCategories>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
<!-- 		<costList>
			<Amphora>4</Amphora>
		</costList> -->
		<building>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Foods</li>
					</categories>
				</filter>
			</fixedStorageSettings>
		</building>
		<comps>
			<li Class="RA.CompContainer_Properties">
				<compClass>RA.CompContainer</compClass>
				<itemsCap>4</itemsCap>
				<rotModifier>0.75</rotModifier>
			</li>
		</comps>
	</ThingDef>
	

</Buildings>
