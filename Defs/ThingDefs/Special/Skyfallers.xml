<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef>
    <defName>DropShipIncoming</defName>
    <category>Skyfaller</category>
    <label>Drop Ship (incoming)</label>
    <thingClass>RA.DropShipIncoming</thingClass>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Special/CrashingShipPartAscension</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(6,3)</drawSize>
