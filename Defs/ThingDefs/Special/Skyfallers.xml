<?xml version="1.0" encoding="utf-8" ?>
<Buildings>


	<!--========================= Crashing Skyfallers =============================-->


	<ThingDef Name="SkyfallerCrashing">
		<defName>DropPodCrashing</defName>
		<category>Skyfaller</category>
		<label>crashing drop pod</label>
		<thingClass>RA.DropPodCrashing</thingClass>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Special/DropPod</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutFlying</shaderType>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<altitudeLayer>MetaOverlays</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<drawOffscreen>true</drawOffscreen>
	</ThingDef>


	<ThingDef ParentName="SkyfallerCrashing">
		<defName>ShipWreckCrashing</defName>
		<label>crashing ship wreck</label>
		<thingClass>RA.ShipWreckCrashing</thingClass>
		<graphicData>
			<texPath>Things/Special/Skyfallers/ShipWreckCrashing</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutFlying</shaderType>
			<drawSize>(5,3)</drawSize>
		</graphicData>
	</ThingDef>


	<!--========================= Landed Skyfallers =============================-->


	<ThingDef Name="SkyfallerCrashed">
		<defName>DropPodCrashed</defName>
		<label>drop pod wreckage</label>
		<category>Building</category>
		<thingClass>RA.DropPodCrashed</thingClass>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Special/Skyfallers/DropPodCrashed</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.8, 0.6, 0.8)</volume>
			</shadowData>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<altitudeLayer>BuildingTall</altitudeLayer>
		<passability>Impassable</passability>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<!-- needed to be able to deconstruct -->
			<WorkToMake>100</WorkToMake>
		</statBases>
		<selectable>true</selectable>
	</ThingDef>


	<ThingDef ParentName="SkyfallerCrashed">
		<defName>ShipWreckCrashed</defName>
		<label>ship wreck</label>
		<thingClass>RA.ShipWreckCrashed</thingClass>
		<graphicData>
			<texPath>Things/Special/Skyfallers/ShipWreckCrashed</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(5,3)</drawSize>
		</graphicData>
		<size>(5,3)</size>
		<statBases>
			<WorkToMake>300</WorkToMake>
		</statBases>
	</ThingDef>


</Buildings>