<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="PlantBase" Abstract="True">
		<category>Plant</category>
		<thingClass>Plant</thingClass>
		<altitudeLayer>LowPlant</altitudeLayer>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Flammability>0.8</Flammability>
		</statBases>
		<tickerType>Long</tickerType>
		<selectable>False</selectable>
		<neverMultiSelect>True</neverMultiSelect>
		<drawerType>MapMeshOnly</drawerType>
		<graphicData>
			<shaderType>CutoutPlant</shaderType>
		</graphicData>
		<plant>
			<harvestDestroys>true</harvestDestroys>
			<soundHarvesting>Harvest_Standard</soundHarvesting>
			<soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
			<harvestWork>150</harvestWork>
			<sowWork>150</sowWork>
			<fertilityMin>0.5</fertilityMin>
			<fertilityFactorGrowthRate>1.0</fertilityFactorGrowthRate>
			<topWindExposure>0.1</topWindExposure>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.00</max>
			</visualSizeRange>
		</plant>
	</ThingDef>


	<!--===========================  Wild - clustering bushes (some harvestable) ==============================-->


	<ThingDef ParentName="PlantBase">
		<defName>PlantBush</defName>
		<label>bush</label>
		<description>A short shrub. Does not typically talk.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Bush</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.37, 0.2, 0.37)</volume>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<fillPercent>0.25</fillPercent>
		<pathCost>30</pathCost>
		<ingestible>
			<preferability>Plant</preferability>
			<nutrition>0.17</nutrition>
		</ingestible>
		<plant>
			<leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath>
			<harvestWork>100</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestDestroys>false</harvestDestroys>
			<harvestedThingDef>LeafBundle</harvestedThingDef>
			<harvestYield>10</harvestYield>
			<fertilityMin>0.4</fertilityMin>
			<wildClusterSizeRange>
				<min>2</min>
				<max>5</max>
			</wildClusterSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
			<visualSizeRange>
				<min>0.7</min>
				<max>1.1</max>
			</visualSizeRange>
			<growDays>6</growDays>
			<topWindExposure>0.3</topWindExposure>
			<fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
		</plant>
	</ThingDef>


</Defs>