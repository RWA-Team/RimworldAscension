<?xml version="1.0" encoding="utf-8" ?>
<Plants>

	<!-- 
	- sowTags - determines where this plant can be grown
	- harvestTag - determine what designator allows harvesting
	- harvestFailable (true) - can fail on low skill
	-->

	<!--==================== Trees ========================-->

	<ThingDef Name="Tree" ParentName="Plant" Abstract="True">
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
		</statBases>
		<altitudeLayer>BuildingTall</altitudeLayer>
		<fillPercent>0.35</fillPercent>
		<graphicData>
			<shadowData>
				<volume>(0.3, 0.3, 0.3)</volume>
			</shadowData>
		</graphicData>
		<passability>PassThroughOnly</passability>
		<pathCost>130</pathCost>
		<ingestible>
			<foodType>Tree</foodType>
			<preferability>Raw</preferability>
			<nutrition>1.50</nutrition>
		</ingestible>
		<plant>
			<harvestTag>Chop</harvestTag>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<sowWork>1500</sowWork>
			<harvestWork>800</harvestWork>
			<harvestDestroys>true</harvestDestroys>
			<harvestedThingDef>WoodLog</harvestedThingDef>
			<harvestYield>30</harvestYield>
			<harvestMinGrowth>0.20</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<blockAdjacentSow>true</blockAdjacentSow>
			<visualSizeRange>
				<min>1.3</min>
				<max>2.0</max>
			</visualSizeRange>
			<wildClusterSizeRange>
				<min>8</min>
				<max>30</max>
			</wildClusterSizeRange>
			<fertilityMin>0.3</fertilityMin>
			<topWindExposure>0.25</topWindExposure>
			<wildClusterRadius>8</wildClusterRadius>
		</plant>
	</ThingDef>


	<ThingDef ParentName="Tree">
		<defName>PlantTreeOak</defName>
		<label>oak tree</label>
		<description>A strong hardwood tree. Slow-going, but its wood is very strong.</description>
		<graphicData>
			<texPath>Things/Plant/TreeOak</texPath>
		</graphicData>
		<statBases>
			<Beauty>5</Beauty>
		</statBases>
		<plant>
			<leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath>
			<growDays>30</growDays>
			<harvestWork>1000</harvestWork>
			<harvestYield>50</harvestYield>
		</plant>
	</ThingDef>

