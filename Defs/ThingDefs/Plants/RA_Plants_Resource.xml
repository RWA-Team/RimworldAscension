<?xml version="1.0" encoding="utf-8" ?>
<Plants>

	<!-- 
	- sowTags - determines where this plant can be grown
	- harvestTag - determine what designator allows harvesting
	-->
	
	<ThingDef ParentName="Plant">
		<defName>PlantBush</defName>
		<label>bush</label>
		<description>A short shrub. Does not typically talk.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Bush</texPath>
			<shadowData>
				<volume>(0.37, 0.2, 0.37)</volume>
			</shadowData>
		</graphicData>
		<fillPercent>0.25</fillPercent>
		<pathCost>30</pathCost>
		<ingestible>
			<nutrition>0.17</nutrition>
		</ingestible>
		<plant>
			<leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath>
			<harvestWork>100</harvestWork>
			<harvestedThingDef>BarkFibre</harvestedThingDef>
			<harvestYield>5</harvestYield>
			<fertilityMin>0.4</fertilityMin>
			<wildClusterSizeRange>
				<min>2</min>
				<max>5</max>
			</wildClusterSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
			<visualSizeRange>
				<min>0.7</min>
				<max>1.1</max>
			</visualSizeRange>
			<growDays>6</growDays>
			<topWindExposure>0.3</topWindExposure>
			<fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
		</plant>
	</ThingDef>

	<ThingDef ParentName="Plant">
		<defName>PlantGrass</defName>
		<label>grass</label>
		<description>Wild grass. Grows anywhere there is a little light and minimally fertile ground.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		<selectable>false</selectable>
		<graphicData>
			<texPath>Things/Plant/Grass</texPath>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible>
			<nutrition>0.15</nutrition>
		</ingestible>
		<plant>
			<leaflessGraphicPath>Things/Plant/Grass_Leafless</leaflessGraphicPath>
			<harvestWork>40</harvestWork>
			<harvestedThingDef>Hay</harvestedThingDef>
			<harvestYield>3</harvestYield>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>9</maxMeshCount>
			<visualSizeRange>
				<min>0.4</min>
				<max>0.6</max>
			</visualSizeRange>
			<growDays>5</growDays>
			<topWindExposure>0.4</topWindExposure>
			<seedEmitMTBDays>7</seedEmitMTBDays>
			<fertilityFactorGrowthRate>0.90</fertilityFactorGrowthRate>
			<fertilityFactorPlantChance>0.90</fertilityFactorPlantChance>
		</plant>
	</ThingDef>

	<ThingDef ParentName="Plant">
		<defName>PlantXerigium</defName>
		<label>xerigium</label>
		<description>This plant was selectively bred for centuries by settlers. It is sometimes also called &quot;healer's hand&quot; by tribespeople - a nickname it owes to its five major medicinal virtues.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>1</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Healroot</texPath>
		</graphicData>
		<ingestible>
			<nutrition>0.05</nutrition>
		</ingestible>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<shootsSeeds>false</shootsSeeds>
			<harvestedThingDef>Xerigium</harvestedThingDef>
			<harvestDestroys>true</harvestDestroys>
			<harvestYield>1</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>7</growDays>
			<fertilityFactorGrowthRate>0.4</fertilityFactorGrowthRate>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.0</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

</Plants>