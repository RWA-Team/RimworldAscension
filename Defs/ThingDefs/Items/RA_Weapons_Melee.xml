<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<!-- 
	stuffCategories - specifies that weapon is made from stuff (stuff modifiers apply) and what stuff types should be used
	-->

	<ThingDef Name="MeleeWeapon_Base" Abstract="True">
		<category>Item</category>
		<thingClass>ThingWithComps</thingClass>
		<equipmentType>Primary</equipmentType>
		<pathCost>15</pathCost>
		<useHitPoints>True</useHitPoints>
		<selectable>True</selectable>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>0.5</DeteriorationRate>
			<SellPriceFactor>0.1</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<soundInteract>InteractPistol</soundInteract>
		<thingCategories>
			<li>WeaponsMelee</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompEquippable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li>
				<compClass>CompArt</compClass>
				<nameMaker>NamerMeleeWeapon</nameMaker>
				<descriptionMaker>ArtWeaponMelee</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
	</ThingDef>


	<!-- ========================= Neolithic =========================-->

	<ThingDef Name="MeleeWeapon_Neolithic" ParentName="MeleeWeapon_Base" Abstract="True">
		<techLevel>Neolithic</techLevel>
		<stuffCategories>
			<li>Bone</li>
			<li>Stony</li>
		</stuffCategories>
	</ThingDef>


	<ThingDef ParentName="MeleeWeapon_Neolithic">
		<defName>Shiv</defName>
		<label>shiv</label>
		<description>One of humankind's oldest tools, the shiv is both an everyday tool and a deadly weapon.</description>
		<graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/Shiv</texPath>
		</graphicData>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<statBases>
			<MarketValue>60</MarketValue>
			<MeleeWeapon_DamageAmount>5</MeleeWeapon_DamageAmount>
			<MeleeWeapon_Cooldown>1.66</MeleeWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<meleeDamageDef>Cut</meleeDamageDef>
			</li>
		</verbs>
		<weaponTags>
			<li>Melee_Neolithic_Weak</li>
		</weaponTags>
	</ThingDef>

	<ThingDef ParentName="MeleeWeapon_Neolithic">
		<defName>Spear</defName>
		<label>spear</label>
		<description>A polearm tipped with a sharp point for stabbing opponents in melee combat.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponMelee/Spear</texPath>
		</graphicData>
		<equippedAngleOffset>-25</equippedAngleOffset>
		<statBases>
			<MarketValue>60</MarketValue>
			<MeleeWeapon_DamageAmount>5</MeleeWeapon_DamageAmount>
			<MeleeWeapon_Cooldown>1.66</MeleeWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<meleeDamageDef>Stab</meleeDamageDef>
			</li>
		</verbs>
		<weaponTags>
			<li>Melee_Neolithic</li>
		</weaponTags>
	</ThingDef>

	<ThingDef ParentName="MeleeWeapon_Neolithic">
		<defName>Club</defName>
		<label>club</label>
		<description>The oldest human weapon - a shaped piece of wood for bashing enemies to death. Primitive but effective.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponMelee/Club</texPath>
		</graphicData>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<statBases>
			<MarketValue>60</MarketValue>
			<MeleeWeapon_DamageAmount>5</MeleeWeapon_DamageAmount>
			<MeleeWeapon_Cooldown>1.66</MeleeWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<meleeDamageDef>Blunt</meleeDamageDef>
			</li>
		</verbs>
		<weaponTags>
			<li>Melee_Neolithic</li>
		</weaponTags>
	</ThingDef>


</ThingDefs>