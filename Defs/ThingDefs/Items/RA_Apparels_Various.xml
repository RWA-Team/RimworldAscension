<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<SellPriceFactor>0.5</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>


	<ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<!-- 			<recipeUsers>
				<li>TailorTable_Neolithic</li>
			</recipeUsers> -->
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>


	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_Backpack</defName>
		<label>backpack</label>
		<description>A backpack is a bag with straps that go over your shoulders, so that you can carry things on your back when you are walking or climbing.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Backpack/Backpack</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tickerType>Normal</tickerType>
		<costStuffCount>50</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<WorkToMake>1000</WorkToMake>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Backpack/Backpack</worngraphicPath>
			<layers>
				<li>Accessory</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.4,0.3,0.15,1)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>RGBA(0.6,0.45,0.18,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.8,0.6,0.23,1)</only>
				</li>
			</options>
		</colorGenerator>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li Class="RA.CompSlots_Properties">
				<compClass>RA.CompSlots</compClass>
				<allowedThingCategoryDefs>
					<li>Weapons</li>
					<li>Apparel</li>
				</allowedThingCategoryDefs>
				<forbiddenSubThingCategoryDefs>
					<li>Tools</li>
				</forbiddenSubThingCategoryDefs>
				<maxSlots>1</maxSlots>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_Toolbelt</defName>
		<label>toolbelt</label>
		<description>A toolbelt to keep your tools to yourself.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Toolbelt/Toolbelt</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tickerType>Normal</tickerType>
		<costStuffCount>50</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<WorkToMake>1000</WorkToMake>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Legs</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Toolbelt/Toolbelt</worngraphicPath>
			<layers>
				<li>Accessory</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.4,0.3,0.15,1)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>RGBA(0.6,0.45,0.18,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.8,0.6,0.23,1)</only>
				</li>
			</options>
		</colorGenerator>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li Class="RA.CompSlots_Properties">
				<compClass>RA.CompSlots</compClass>
				<allowedThingCategoryDefs>
					<li>Tools</li>
				</allowedThingCategoryDefs>
				<maxSlots>3</maxSlots>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Shield_Neolithic</defName>
		<thingClass>RA.Shield</thingClass>
		<label>shield</label>
		<description>A shield made from hard materials able to deflect most types of attack. Wears out with use. </description>
		<graphicData>
			<texPath>Things/Items/Apparels/Shield</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tickerType>Normal</tickerType>
		<statBases>
			<MarketValue>600</MarketValue>
			<WorkToMake>1200</WorkToMake>
			<DeteriorationRate>1</DeteriorationRate>
		</statBases>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<layers>
				<li>Accessory</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
	</ThingDef>


</ThingDefs>