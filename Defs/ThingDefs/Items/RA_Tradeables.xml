<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="Tradeable" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<randomizeRotationOnSpawn>true</randomizeRotationOnSpawn>
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Flammability>1.0</Flammability>
		</statBases>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<thingCategories>
			<li>Tradeables</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
	</ThingDef>


	<!--===================== Neolithic =====================-->
	
	
	<ThingDef ParentName="Tradeable">
		<defName>Figurine</defName>
		<label>figurine</label>
		<description>A handcrafted figurine or idol resembling some sort of creature. It looks valuable.</description>
		<graphicData>
			<texPath>Things/Items/Tradeables/Figurines</texPath>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<statBases>
			<WorkToMake>100</WorkToMake>
			<MarketValue>100</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<stuffCategories>
			<li>Wood</li>
			<li>StoneBlock</li>
			<li>Bone</li>
		</stuffCategories>
		<comps>
			<li>
				<compClass>CompArt</compClass>
				<nameMaker>NamerFigurine</nameMaker>
				<descriptionMaker>ArtFigurine</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="Tradeable">
		<defName>Ceramics</defName>
		<label>ceramics</label>
		<description>Various amphoras and vials made of clay.</description>
		<graphicData>
			<texPath>Things/Items/Tradeables/Ceramics</texPath>
			<color>(198,255,255)</color>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<statBases>
			<WorkToMake>100</WorkToMake>
			<MarketValue>100</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
	</ThingDef>

</Defs>