<ThingDefs>

	<!-- 
	stuffCategories - specifies that weapon is made from stuff (stuff modifiers apply) and what stuff types should be used
	-->

	<ThingDef Name="BaseTool" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<equipmentType>Primary</equipmentType>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<selectable>True</selectable>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>0.5</DeteriorationRate>
			<SellPriceFactor>0.1</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>Tools</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompEquippable</compClass>
			</li>
		</comps>
		<soundInteract>Interact_BeatFire</soundInteract>
	</ThingDef>


	<ThingDef Name="PlantCuttingTool" ParentName="BaseTool" Abstract="True">
		<weaponTags>
			<li>PlantCuttingTool</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<meleeDamageDef>Cut</meleeDamageDef>
			</li>
		</verbs>
	</ThingDef>


	<ThingDef Name="MiningTool" ParentName="BaseTool" Abstract="True">
		<weaponTags>
			<li>MiningTool</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<meleeDamageDef>Stab</meleeDamageDef>
			</li>
		</verbs>
	</ThingDef>


	<ThingDef Name="ConstructionTool" ParentName="BaseTool" Abstract="True">
		<weaponTags>
			<li>ConstructionTool</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<meleeDamageDef>Blunt</meleeDamageDef>
			</li>
		</verbs>
	</ThingDef>


	<ThingDef Name="CleaningTool" ParentName="BaseTool" Abstract="True">
		<weaponTags>
			<li>CleaningTool</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<meleeDamageDef>Blunt</meleeDamageDef>
			</li>
		</verbs>
	</ThingDef>


