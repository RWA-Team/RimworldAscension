<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<SellPriceFactor>0.5</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>


	<ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>TailorTable_Neolithic</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>


	<!--======================= Neolithic Apparel =======================-->


	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_TribalA</defName>
		<label>tribalwear</label>
		<description>A garment crafted without machines using neolithic tools.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/TribalA/TribalA</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>35</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<WorkToMake>2000</WorkToMake>
			<Insulation_Cold>-10</Insulation_Cold>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Pawn/Humanlike/Apparel/TribalA/TribalA</worngraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<commonality>1</commonality>
			<tags>
				<li>Tribal</li>
			</tags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.4,0.3,0.15,1)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>RGBA(0.6,0.45,0.18,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.8,0.6,0.23,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>


	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_Loincloth</defName>
		<label>loincloth</label>
		<description>Small pieces of leather to hide your nudity.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Loincloth/Loincloth</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>35</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<WorkToMake>2000</WorkToMake>
			<Insulation_Cold>-10</Insulation_Cold>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Loincloth/Loincloth</worngraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<commonality>1</commonality>
			<tags>
				<li>Tribal</li>
			</tags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.4,0.3,0.15,1)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>RGBA(0.6,0.45,0.18,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.8,0.6,0.23,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>


</ThingDefs>