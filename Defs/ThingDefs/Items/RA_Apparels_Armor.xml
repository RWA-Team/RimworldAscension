<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<!-- 
	defaultOutfitTags - used to determine gear in preset outfit sets available in the outfits menu
	equippedStatOffsets - applies offset to the pawns stat when worn
	worngraphicPath - used to fraw apparel texture on the pawn. shows nothing if not set
	 -->

	<ThingDef Name="Armor" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>0.5</DeteriorationRate>
			<SellPriceFactor>0.1</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>Armor</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>


	<!-- ========================= Head =========================-->


	<ThingDef Name="ArmorHead" ParentName="Armor" Abstract="True">
		<thingCategories>
			<li>Headgear</li>
		</thingCategories>
		<apparel>
			<layers>
				<li>Overhead</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
	</ThingDef>


	<ThingDef ParentName="ArmorHead">
		<defName>HeadBone</defName>
		<label>bone mask</label>
		<description>A bone mask.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Armor/ArmorBone/HeadBone</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<MarketValue>50</MarketValue>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.02</ArmorRating_Sharp>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Armor/ArmorBone//HeadBone</worngraphicPath>
			<tags>
				<li>ArmorBone</li>
			</tags>
		</apparel>
	</ThingDef>


	<!-- ========================= Chest =========================-->


	<ThingDef Name="ArmorChest" ParentName="Armor" Abstract="True">
		<apparel>
			<layers>
				<li>Middle</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
	</ThingDef>


	<ThingDef ParentName="ArmorChest">
		<defName>ArmorBone</defName>
		<label>bone armor</label>
		<description>A bone armor chespiece.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Armor/ArmorBone/ArmorBone</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<MarketValue>50</MarketValue>
			<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.1</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Armor/ArmorBone/ArmorBone</worngraphicPath>
			<tags>
				<li>ArmorBone</li>
			</tags>
		</apparel>
	</ThingDef>


	<!-- ========================= Shields =========================-->


	<ThingDef Name="ArmorShield" ParentName="Armor" Abstract="True">
		<thingClass>RA.Shield</thingClass>
		<apparel>
			<bodyPartGroups>
				<li>Arms</li>
			</bodyPartGroups>
			<layers>
				<li>Accessory</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
	</ThingDef>


	<ThingDef ParentName="ArmorShield">
		<defName>ShieldTribal</defName>
		<label>tribal shield</label>
		<description>A primitive wooden shield, commonly used by local tribes. </description>
		<graphicData>
			<texPath>Things/Items/Apparels/Shields/ShieldTribal</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
		</statBases>
		<stuffCategories>
			<li>Wood</li>
		</stuffCategories>
	</ThingDef>

	<ThingDef ParentName="ArmorShield">
		<defName>ShieldBone</defName>
		<label>bone shield</label>
		<description>A shield made of various bones put together with leather and wood. Looks intimidating.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Shields/ShieldBone</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
		</statBases>
		<stuffCategories>
			<li>Bone</li>
		</stuffCategories>
	</ThingDef>

</ThingDefs>