<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- 
	statBases - base stat values for the thing
	default values:
		- Flammability = 0
		- MaxHitPoints = 100
		
	stuffProps:	
		statOffsets - stuff based offset values
		statFactors - stuff based multiplier values
		stuffCommonality - weight chance to appear in trader stock	
	
	Work only in statBases:
		Blunt\SharpDamageMultiplier
	-->
	 
	<!--==================== Base Abstracts ========================-->

	<ThingDef Name="Resource" ParentName="Item" Abstract="True">
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<stackLimit>75</stackLimit>
	</ThingDef>

	<ThingDef Name="ResourceOrganic" ParentName="Resource" Abstract="True" >
		<socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<DeteriorationRate>5</DeteriorationRate>
		</statBases>
		<tickerType>Rare</tickerType>
	</ThingDef>
	
	<!--=============== Clay Products Unfired ===================-->	

	<ThingDef Name="ClayProductUnfired" ParentName="Resource" Abstract="True">
		<thingCategories>
			<li>ClayProductsUnfired</li>
		</thingCategories>
		<tradeability>Never</tradeability>
	</ThingDef>

	<!-- raw pottery -->

	<ThingDef ParentName="ClayProductUnfired">
		<defName>RawPot</defName>
		<label>raw pot</label>
		<description>An unfired pot.</description>
		<graphicData>
			<texPath>Things/Buildings/Furniture/Containers/Pot/Pot</texPath>
			<color>(147,135,106)</color>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="ClayProductUnfired">
		<defName>RawCeramics</defName>
		<label>raw ceramics</label>
		<description>An unfired ceramics.</description>
		<graphicData>
			<texPath>Things/Items/Resources/RawClayProducts/RawCeramics</texPath>
			<color>(52,124,98)</color>
		</graphicData>
	</ThingDef>
	
	<!-- raw clay blocks -->

	<ThingDef Name="ResourceRawClayProductBlock" ParentName="ClayProductUnfired" Abstract="True">
		<graphicData>
			<texPath>Things/Items/Resources/RawClayProducts/RawBlocksClay</texPath>
		</graphicData>
	</ThingDef>


	<ThingDef ParentName="ResourceRawClayProductBlock">
		<defName>RawBlockAdobe</defName>
		<label>raw adobe block</label>
		<description>A pile of unfired adobe blocks.</description>
		<graphicData>
			<color>(127,106,0)</color>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="ResourceRawClayProductBlock">
		<defName>RawBrick</defName>
		<label>raw brick</label>
		<description>A pile of unfired bricks.</description>
		<graphicData>
			<color>(127,51,0)</color>
		</graphicData>
	</ThingDef>

</Defs>