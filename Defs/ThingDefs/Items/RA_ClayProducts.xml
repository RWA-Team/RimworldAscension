<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- 
	statBases - base stat values for the thing
	default values:
		- Flammability = 0
		- MaxHitPoints = 100
		
	stuffProps:	
		statOffsets - stuff based offset values
		statFactors - stuff based multiplier values
		stuffCommonality - weight chance to appear in trader stock	
	
	Work only in statBases:
		Blunt\SharpDamageMultiplier
	-->

	<ThingDef Name="Resource" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>75</stackLimit>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
		</comps>
	</ThingDef>
	
	
	<!--========================= Clay =========================-->
	

	<ThingDef Name="ResourceClay" ParentName="Resource" Abstract="True">
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<thingCategories>
			<li>Clay</li>
		</thingCategories>
		<graphicData>
			<texPath>Things/Items/Resources/ClumpClay</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>


	<ThingDef ParentName="ResourceClay">
		<defName>ClumpClayRed</defName>
		<label>red clay clumps</label>
		<description>Clumps of red clay.</description>
		<graphicData>
			<color>(127,51,0)</color>
		</graphicData>
		<tradeability>Never</tradeability>
	</ThingDef>

	<ThingDef ParentName="ResourceClay">
		<defName>ClumpClayWhite</defName>
		<label>white clay clumps</label>
		<description>Clumps of white clay.</description>
		<graphicData>
			<color>(52,124,98)</color>
		</graphicData>
		<statBases>
			<MarketValue>20</MarketValue>
		</statBases>
	</ThingDef>
	
	
	<!--========================= Raw Clay Products =========================-->
	

	<ThingDef Name="ResourceRawClayProduct" ParentName="Resource" Abstract="True">
		<thingCategories>
			<li>RawClayProducts</li>
		</thingCategories>
		<tradeability>Never</tradeability>
	</ThingDef>


	<ThingDef ParentName="ResourceClay">
		<defName>RawPot</defName>
		<label>raw pot</label>
		<description>An unfired pot.</description>
		<graphicData>
			<texPath>Things/Buildings/Furniture/Containers/Pot/Pot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(147,135,106)</color>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="ResourceClay">
		<defName>RawCeramics</defName>
		<label>raw ceramics</label>
		<description>An unfired ceramics.</description>
		<graphicData>
			<texPath>Things/Items/Resources/RawClayProducts/RawCeramics</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(52,124,98)</color>
		</graphicData>
	</ThingDef>
	

	<ThingDef Name="ResourceRawClayProductBlock" ParentName="ResourceRawClayProduct" Abstract="True">
		<graphicData>
			<texPath>Things/Items/Resources/RawClayProducts/RawBlocksClay</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>


	<ThingDef ParentName="ResourceClay">
		<defName>RawBlockAdobe</defName>
		<label>raw adobe block</label>
		<description>A pile of unfired adobe blocks.</description>
		<graphicData>
			<color>(127,106,0)</color>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="ResourceClay">
		<defName>RawBrick</defName>
		<label>raw brick</label>
		<description>A pile of unfired bricks.</description>
		<graphicData>
			<color>(127,51,0)</color>
		</graphicData>
	</ThingDef>

</Defs>