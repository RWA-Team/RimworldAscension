<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<!-- 
	defaultOutfitTags - used to determine gear in preset outfit sets available in the outfits menu
	equippedStatOffsets - applies offset to the pawns stat when worn
	worngraphicPath - used to fraw apparel texture on the pawn. shows nothing if not set
	 -->

	<ThingDef Name="Clothing_Base" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>0.5</DeteriorationRate>
			<SellPriceFactor>0.1</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>


	<!--======================= Special =======================-->
	
	
	<ThingDef Name="Clothing_Slave" ParentName="Clothing_Base" Abstract="True">
		<statBases>
			<ArmorRating_Blunt>0.03</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.03</ArmorRating_Sharp>
			<Insulation_Cold>-5</Insulation_Cold>
		</statBases>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<only>RGBA(1,0.5,0,2)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>


	<ThingDef ParentName="Clothing_Slave">
		<defName>SlaveShirt</defName>
		<label>slave shirt</label>
		<description>An orange shirt, used by most of the prisons to keep track of prisoners.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ShirtButton/ShirtButton</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Pawn/Humanlike/Apparel/ShirtButton/ShirtButton</worngraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>Starting</li>
			</tags>
		</apparel>
	</ThingDef>

	<ThingDef ParentName="Clothing_Slave">
		<defName>SlavePants</defName>
		<label>slave pants</label>
		<description>An orange pants, used by most of the prisons to keep track of prisoners.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Various/Pants_OnMap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<apparel>
			<bodyPartGroups>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>Starting</li>
			</tags>
		</apparel>
	</ThingDef>


	<!--======================= Neolithic =======================-->


	<ThingDef Name="Clothing_Neolithic" ParentName="Clothing_Base" Abstract="True">
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<apparel>
			<tags>
				<li>Clothing_Neolithic</li>
			</tags>
		</apparel>
	</ThingDef>


	<ThingDef ParentName="Clothing_Neolithic">
		<defName>Tribalwear</defName>
		<label>tribalwear</label>
		<description>A garment crafted without machines using neolithic tools.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/TribalA/TribalA</texPath>
		</graphicData>
		<statBases>
			<Insulation_Cold>-10</Insulation_Cold>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Legs</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Pawn/Humanlike/Apparel/TribalA/TribalA</worngraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.4,0.3,0.15,1)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>RGBA(0.6,0.45,0.18,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.8,0.6,0.23,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>


	<ThingDef ParentName="Clothing_Neolithic">
		<defName>Loincloth</defName>
		<label>loincloth</label>
		<description>Small pieces of leather to hide your nudity.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Loincloth/Loincloth</texPath>
		</graphicData>
		<statBases>
			<Insulation_Cold>-10</Insulation_Cold>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Loincloth/Loincloth</worngraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.4,0.3,0.15,1)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>RGBA(0.6,0.45,0.18,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.8,0.6,0.23,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

	<ThingDef ParentName="Clothing_Neolithic">
		<defName>Cape</defName>
		<label>cape</label>
		<description>A cape. Protects you from cold and curious glances.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Cape/Cape</texPath>
		</graphicData>
		<statBases>
			<Insulation_Cold>-10</Insulation_Cold>
			<Insulation_Heat>-2</Insulation_Heat>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Cape/Cape</worngraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.33,0.33,0.33,1)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>RGBA(0.65,0.65,0.65,1)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>RGBA(0.3,0.3,0.3,1)</min>
					<max>RGBA(0.5,0.5,0.5,1)</max>
				</li>
				<li>
					<weight>10</weight>
					<only>RGBA(0.9,0.9,0.9,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

	<ThingDef ParentName="Clothing_Neolithic">
		<defName>HatBaggy</defName>
		<label>baggy hat</label>
		<description>A hat.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Hat/Hat</texPath>
		</graphicData>
		<statBases>
			<Insulation_Cold>-10</Insulation_Cold>
			<Insulation_Heat>-2</Insulation_Heat>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Hat/Hat</worngraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<commonality>1</commonality>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.33,0.33,0.33,1)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>RGBA(0.65,0.65,0.65,1)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>RGBA(0.3,0.3,0.3,1)</min>
					<max>RGBA(0.5,0.5,0.5,1)</max>
				</li>
				<li>
					<weight>10</weight>
					<only>RGBA(0.9,0.9,0.9,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>


</ThingDefs>