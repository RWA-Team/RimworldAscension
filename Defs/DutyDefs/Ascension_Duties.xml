<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<DutyDef>
		<defName>GoTo</defName>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<li Class="RimworldAscension.JobGiver_GoTo" />
				<li Class="RimworldAscension.JobGiver_Station"/>
			</subNodes>
		</thinkNode>
	</DutyDef>


	<DutyDef>
		<defName>Defend</defName>
		<alwaysShowWeapon>true</alwaysShowWeapon>
		<thinkNode Class="ThinkNode_Priority">
			<!-- Todo here - if outside of duty radius, go to within duty radius-->
			<!-- Currently this is handled by a hack in JobGiver_AIFightBase-->
			<subNodes>
				<li Class="JobGiver_AIDefendPoint">
					<targetAcquireRadius>65</targetAcquireRadius>
					<targetKeepRadius>72</targetKeepRadius>
				</li>
				<li Class="ThinkNode_FilterFlagDistance">
					<maxDistToSquadFlag>16</maxDistToSquadFlag>
					<subNodes>
						<li Class="ThinkNode_PrioritySorter">
							<subNodes>
								<li Class="JobGiver_GetFood"/>
								<li Class="JobGiver_GetRest"/>
								<li Class="JobGiver_Work"/>
							</subNodes>
						</li>
					</subNodes>
				</li>
				<li Class="JobGiver_WanderNearDutyLocation">
					<wanderRadius>3</wanderRadius>
				</li>
			</subNodes>
		</thinkNode>
	</DutyDef>


	<DutyDef>
		<defName>EscortTradeCart</defName>
		<alwaysShowWeapon>true</alwaysShowWeapon>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<li Class="RimworldAscension.JobGiver_AIFollowEscortee"/>
				<li Class="JobGiver_AIDefendEscortee">
					<targetAcquireRadius>65</targetAcquireRadius>
					<targetKeepRadius>72</targetKeepRadius>
				</li>
				<li Class="JobGiver_WanderNearDutyLocation">
					<wanderRadius>3</wanderRadius>
				</li>
			</subNodes>
		</thinkNode>
	</DutyDef>


	<DutyDef>
		<defName>Station</defName>
		<thinkNode Class="ThinkNode_Priority">
			<subNodes>
				<li Class="RimworldAscension.JobGiver_Station"/>
			</subNodes>
		</thinkNode>
	</DutyDef>


</Defs>