<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<!-- recipeDef should be the same as corresponding researchProjectDef -->

	<RecipeDef Name="Research" Abstract="True">
		<jobString>Doing research.</jobString>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<allowMixingIngredients>true</allowMixingIngredients>
		<fixedIngredientFilter>
			<categories>
