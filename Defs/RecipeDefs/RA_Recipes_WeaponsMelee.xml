<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<!-- 
	workAmount - number of ticks to complete the recipe at normal speed and efficiency (60 t/s)
	fixedIngredientFilter - determine ingridiens set to be chosen from
	
	defaultIngredientFilter - determine ingridiens set to be enabled by default (blocks all others)
	IMPORTANT!: used as a special case to disallow stuff types of the result products
	-->

	<RecipeDef Name="MakeWeapon_Base" Abstract="True">
		<jobString>Making a weapon.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
		<researchPrerequisite>Blocked</researchPrerequisite>
	</RecipeDef >


	<!-- ========================= Neolithic =========================-->
	

	<RecipeDef Name="MakeWeapon_Neolithic" ParentName="MakeWeapon_Base" Abstract="True">
		<fixedIngredientFilter>		
<!-- 		== added via research mods ==
			<categories>
				<li>StoneBlocks</li>
			</categories> -->			
			<thingDefs>			
<!-- 			== added via research mods ==
				<li>Bone</li> -->				
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</defaultIngredientFilter>
		<recipeUsers>
			<li>WarriorsBench</li>
		</recipeUsers>
	</RecipeDef >


	<RecipeDef  ParentName="MakeWeapon_Neolithic">
		<defName>Make_Dagger</defName>
		<label>make dagger</label>
		<description>Makes a crude neolithic dagger.</description>
		<workAmount>600</workAmount>
		<products>
			<Dagger>1</Dagger>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneBlocks</li>
					</categories>
					<thingDefs>
						<li>Bone</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef>

	<RecipeDef  ParentName="MakeWeapon_Neolithic">
		<defName>Make_Spear</defName>
