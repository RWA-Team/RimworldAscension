						<li>Bone</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef>

	<RecipeDef  ParentName="MakeWeapon_Neolithic">
		<defName>Make_Club</defName>
		<label>make club</label>
		<description>Makes a crude neolithic club.</description>
		<workAmount>9000</workAmount>
		<products>
			<Club>1</Club>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneBlocks</li>
					</categories>
