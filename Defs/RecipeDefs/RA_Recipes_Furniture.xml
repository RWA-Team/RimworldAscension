<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<!-- 
	- workAmount - should never be used (cause not affected by stuff). specify WorkToMake baseStat in product def instead
	- specialProducts - Butchery\Smelted return from processed thing
	- targetCountAdjustment - adjust target resource count in repeat mode by this amount via +\- button
	- fixedIngredientFilter - determine ingridient set to choose from	
	- defaultIngredientFilter - determine ingridiens set to be enabled by default (blocks all others); used as a special case to disallow stuff types of the result products
	- exceptedCategories\exceptedThingDefs - used in RA to specify research based available ingridiens in complext recipes. Changed to allowed ones via reseach mods.
	-->

	<RecipeDef Name="Furniture" Abstract="True">
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.1</workSkillLearnFactor>
		<effectWorking>Sculpt</effectWorking>
		<soundWorking>Recipe_Sculpt</soundWorking>
		<researchPrerequisite>Blocked</researchPrerequisite>
	</RecipeDef>


	<RecipeDef ParentName="Furniture">
		<defName>MakeBasket</defName>
		<label>make basket</label>
		<description>Make bast fiber basket.</description>
		<jobString>Making basket.</jobString>
		<workSpeedStat>WeavingSpeed</workSpeedStat>
		<products>
			<Basket>1</Basket>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BastFibre</li>
			</thingDefs>
		</fixedIngredientFilter>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BastFibre</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<researchPrerequisite>StartPack</researchPrerequisite>
	</RecipeDef>


	<!--===================== Neolithic =====================-->


	<RecipeDef Name="FurnitureNeolithic" ParentName="Furniture" Abstract="True">
		<workSpeedStat>CarvingSpeed</workSpeedStat>
		<fixedIngredientFilter>
			<exceptedCategories>
				<li>BlocksStone</li>
			</exceptedCategories>
			<exceptedThingDefs>
				<li>WoodLog</li>
			</exceptedThingDefs>
		</fixedIngredientFilter>
	</RecipeDef>


	<RecipeDef ParentName="FurnitureNeolithic">
		<defName>MakeStoolPrimitive</defName>
		<label>make primitive stool</label>
		<description>Make primitive stool.</description>
		<jobString>Making primitive stool.</jobString>
		<products>
			<StoolPrimitive>1</StoolPrimitive>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>BlocksStone</li>
					</categories>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
	</RecipeDef>

	<RecipeDef ParentName="FurnitureNeolithic">
		<defName>MakeTableShort</defName>
		<label>make short table</label>
		<description>Make short table.</description>
		<jobString>Making short table.</jobString>
		<products>
			<TableShort>1</TableShort>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>BlocksStone</li>
					</categories>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
	</RecipeDef>

	<RecipeDef ParentName="FurnitureNeolithic">
		<defName>MakeTableLong</defName>
		<label>make long table</label>
		<description>Make long table.</description>
		<jobString>Making long table.</jobString>
		<products>
			<TableLong>1</TableLong>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>BlocksStone</li>
					</categories>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>100</count>
			</li>
		</ingredients>
	</RecipeDef>

</RecipeDefs>