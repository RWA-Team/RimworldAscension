<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<!-- 
	workAmount - number of ticks to complete the recipe at normal speed and efficiency (60 t/s)
	fixedIngredientFilter - determine ingridiens set to be chosen from
	
	defaultIngredientFilter - determine ingridiens set to be enabled by default (blocks all others)
	IMPORTANT!: used as a special case to disallow stuff types of the result products
	-->

	<RecipeDef Name="MakeClothing_Base" Abstract="True">
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		<researchPrerequisite>Blocked</researchPrerequisite>
	</RecipeDef >


	<!-- ========================= Neolithic =========================-->


	<RecipeDef Name="MakeClothing_Neolithic" ParentName="MakeClothing_Base" Abstract="True">
		<fixedIngredientFilter>
			<categories>
				<li>Leathers</li>
			</categories>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>TannersBench</li>
		</recipeUsers>
	</RecipeDef >


	<RecipeDef  ParentName="MakeClothing_Neolithic">
		<defName>Make_Loincloth</defName>
		<label>make loincloth</label>
		<description>Makes a loincloth.</description>
		<products>
			<Loincloth>1</Loincloth>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Leathers</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef>
	
	<RecipeDef  ParentName="MakeClothing_Neolithic">
		<defName>Make_Tribalwear</defName>
		<label>make tribalwear</label>
		<description>Makes a tribalwear.</description>
		<products>
			<Tribalwear>1</Tribalwear>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Leathers</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef>
	
	<RecipeDef  ParentName="MakeClothing_Neolithic">
		<defName>Make_Hat</defName>
		<label>make hat</label>
		<description>Makes a hat.</description>
		<products>
			<Cape>1</Cape>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Leathers</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef>


</RecipeDefs>