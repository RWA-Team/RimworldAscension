<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<!-- 
	- workAmount - should never be used (cause not affected by stuff). specify WorkToMake baseStat in product def instead
	- specialProducts - Butchery\Smelted return from processed thing
	- targetCountAdjustment - adjust target resource count in repeat mode by this amount via +\- button
	- fixedIngredientFilter - determine ingridient set to choose from	
	- defaultIngredientFilter - determine ingridiens set to be enabled by default (blocks all others); used as a special case to disallow stuff types of the result products
	- exceptedCategories\exceptedThingDefs - used in RA to specify research based available ingridiens in complext recipes. Changed to allowed ones via reseach mods.
	-->

	<RecipeDef Name="MakeWeapon" Abstract="True">
		<jobString>Making a weapon.</jobString>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<researchPrerequisite>Blocked</researchPrerequisite>
	</RecipeDef>	


	<!-- ========================= Neolithic =========================-->


	<!-- 5 - Bast fiber\[Leathers] is used as binding material -->
	<RecipeDef Name="MakeWeaponNeolithic" ParentName="MakeWeapon" Abstract="True">
		<workSpeedStat>CarvingSpeed</workSpeedStat>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BastFibre</li>
			</thingDefs>
			<categories>
				<li>Leathers</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>Leathers</li>
			</categories>
		</defaultIngredientFilter>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Leathers</li>
					</categories>
					<thingDefs>
						<li>BastFibre</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef>

	<!-- removes wood from possible stuff types -->
	<RecipeDef Name="MakeWeaponNeolithicWoodBased" ParentName="MakeWeaponNeolithic" Abstract="True">
		<fixedIngredientFilter>
			<exceptedCategories>
				<li>BlocksStone</li>
			</exceptedCategories>
			<exceptedThingDefs>
				<li>Bone</li>
			</exceptedThingDefs>
			<thingDefs>			
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</defaultIngredientFilter>
	</RecipeDef>


