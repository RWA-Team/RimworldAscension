<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<!--===================== Pottery and similar =====================-->
	
	
	<RecipeDef>
		<defName>FireAmphorae</defName>
		<label>fire amphorae</label>
		<description>Turn unfired amphorae into fired amphorae.</description>
		<jobString>Shaping amphorae.</jobString>
			<workAmount>300</workAmount>
			<workSpeedStat>SmeltingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<workSkillLearnFactor>0.1</workSkillLearnFactor>
			<effectWorking>Smelt</effectWorking>
			<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>UnfiredAmphora</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>UnfiredAmphora</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Amphora>1</Amphora>
		</products>
	</RecipeDef>
	
	
	<RecipeDef>
		<defName>FireMudBricks</defName>
		<label>fire mud bricks</label>
		<description>Turn mud, adobe bricks or mudbricks into fired mud bricks.</description>
		<jobString>Firing mud bricks.</jobString>
			<workAmount>900</workAmount>
			<workSpeedStat>SmeltingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<workSkillLearnFactor>0.1</workSkillLearnFactor>
			<effectWorking>Smelt</effectWorking>
			<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Mud</li>
						<li>Mudbricks</li>
						<li>BricksAdobe</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mud</li>
				<li>Mudbricks</li>
				<li>BricksAdobe</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<BricksMudFired>1</BricksMudFired>
		</products>
	</RecipeDef>
	
	
	<!--===================== Other =====================-->


	<RecipeDef>
		<defName>MakeArtilleryShell</defName>
		<label>make artillery shell</label>
		<description>Craft an artillery shell.</description>
		<jobString>Making artillery shell.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>800</workAmount>
		<targetCountAdjustment>5</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<ArtilleryShell>1</ArtilleryShell>
		</products>
		<workSkill>Crafting</workSkill>
	</RecipeDef>


</RecipeDefs>