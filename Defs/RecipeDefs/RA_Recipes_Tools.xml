<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef Name="Make_Tool" Abstract="True">
		<jobString>Making a tool.</jobString>
		<workAmount>550</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef >
  
	<RecipeDef  ParentName="Make_Tool">
		<defName>Make_Tool_Handaxe</defName>
		<label>make handaxe</label>
		<description>Makes a handaxe</description>
		<products>
			<Tool_Woodcutting_Handaxe>1</Tool_Woodcutting_Handaxe>
		</products>
	</RecipeDef>
	
	<RecipeDef  ParentName="Make_Tool">
		<defName>Make_Tool_Pickaxe</defName>
		<label>make pickaxe</label>
		<description>Makes a pickaxe</description>
		<products>
			<Tool_Mining_Pickaxe>1</Tool_Mining_Pickaxe>
		</products>
	</RecipeDef>
	
	<RecipeDef  ParentName="Make_Tool">
		<defName>Make_Tool_Hammer</defName>
		<label>make hammer</label>
		<description>Makes a hammer</description>
		<products>
			<Tool_Building_Hammer>1</Tool_Building_Hammer>
		</products>
	</RecipeDef>

</RecipeDefs>