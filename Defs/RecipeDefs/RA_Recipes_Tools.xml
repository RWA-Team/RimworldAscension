<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<!-- 
	workAmount - number of ticks to complete the recipe at normal speed and efficiency (60 t/s)
	fixedIngredientFilter - determine ingridiens set to be chosen from
	
	defaultIngredientFilter - determine ingridiens set to be enabled by default (blocks all others)
	IMPORTANT!: used as a special case to disallow stuff types of the result products
	-->

	<RecipeDef Name="MakeWeapon_Base" Abstract="True">
		<jobString>Making a weapon.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
		<recipeUsers>
			<li>CraftsmanBench</li>	
		</recipeUsers>
	</RecipeDef >
	
	
	<!-- ========================= Neolithic =========================-->
	

	<RecipeDef Name="MakeWeapon_Neolithic" ParentName="MakeWeapon_Base" Abstract="True">
		<fixedIngredientFilter>
			<categories>
				<li>StoneBlocks</li>
			</categories>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>


	<RecipeDef  ParentName="MakeWeapon_Neolithic">
		<defName>Make_Primitive_Handaxe</defName>
		<label>make improvised hand axe</label>
		<description>Makes an improvised tool for cutting trees.</description>
		<products>
			<Primitive_Handaxe>1</Primitive_Handaxe>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneBlocks</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef>

	<RecipeDef  ParentName="MakeWeapon_Neolithic">
		<defName>Make_Primitive_Hammer</defName>
		<label>make improvised mallet</label>
		<description>Makes an improvised tool for construction.</description>
		<products>
			<Primitive_Hammer>1</Primitive_Hammer>
		</products>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneBlocks</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef>


	<RecipeDef  ParentName="MakeWeapon_Base">
		<defName>Make_Primitive_HandBroom</defName>
		<label>make hand broom</label>
		<description>Makes an improvised cleaning device.</description>
		<products>
			<Primitive_HandBroom>1</Primitive_HandBroom>
		</products>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BastFibre</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
				<li>BastFibre</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
	

</RecipeDefs>