	<RecipeDef Name="Make_Tool" Abstract="True">
		<jobString>Making a tool.</jobString>
		<workAmount>550</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
	</RecipeDef >
  
	<RecipeDef  ParentName="Make_Tool">
